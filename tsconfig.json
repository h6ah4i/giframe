{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "dist/node",
        "target": "ES2020",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": true,
        "lib": [
            "DOM",
            "ES2020",
            "ScriptHost"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifiers": true
    }
}